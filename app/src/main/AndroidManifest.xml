<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.todolist.hinaikhan.mobiletodolist">

    <application
        android:allowBackup="true"
        android:icon="@drawable/list_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/list_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.mvp.splash.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/splashScreenTheme">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".util.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"/>


    </application>

</manifest>